{
  "compilerOptions": {
    "outDir": "./build",
    "esModuleInterop": true,
    "target": "es2016",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["es2015", "es2016", "es2017"],
    "types": ["node"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
